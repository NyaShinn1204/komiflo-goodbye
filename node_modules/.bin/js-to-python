#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../convert-js2py/bin/js-to-python.js" "$@"
else 
  exec node  "$basedir/../convert-js2py/bin/js-to-python.js" "$@"
fi
